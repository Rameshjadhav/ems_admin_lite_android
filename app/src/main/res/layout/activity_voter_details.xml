<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardElevation="1dp"
                app:strokeColor="#ccc"
                app:strokeWidth="2dp"
                tools:ignore="ScrollViewSize">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_5"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_whatsapp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1.2"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/whatsapp"
                            android:textColor="@color/white_in_both_theme" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_send_sms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/send_sms"
                            android:textColor="@color/white_in_both_theme" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_print"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/print"
                            android:textColor="@color/white_in_both_theme" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginVertical="@dimen/dp_10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgNoColor"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginStart="@dimen/dp_2"
                                android:layout_marginTop="@dimen/dp_4"
                                android:onClick="@{onClickListener}"
                                android:src="@drawable/nocolor" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgGreen"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_4"
                                android:onClick="@{onClickListener}"
                                android:src="@drawable/green" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgYellow"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_4"
                                android:onClick="@{onClickListener}"
                                android:src="@drawable/yellow" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgOther"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_4"
                                android:onClick="@{onClickListener}"
                                android:src="@drawable/other" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgRed"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_4"
                                android:onClick="@{onClickListener}"
                                android:src="@drawable/red" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/selectedImg"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_marginStart="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_4"
                            android:background="#ff000000"
                            android:padding="@dimen/dp_1" />
                    </LinearLayout>

                    <RatingBar
                        android:id="@+id/vip_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_4"
                        android:numStars="5"
                        android:stepSize="1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_name"
                            style="@style/TextViewStyleRegular"
                            android:layout_width="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/voter_name"
                            android:textColor="@color/et_hint_color"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="0dp"
                            android:text="@string/app_name"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lbl_name" />

                        <TextView
                            android:id="@+id/lbl_village"
                            style="@style/TextViewStyleRegular"
                            android:layout_width="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/village"
                            android:textColor="@color/et_hint_color"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toStartOf="@+id/lbl_voter_no"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                        <TextView
                            android:id="@+id/lbl_voter_no"
                            style="@style/TextViewStyleRegular"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/voter_no"
                            android:textColor="@color/et_hint_color"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/lbl_village"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                        <TextView
                            android:id="@+id/tv_village"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="0dp"
                            android:text="@string/village"
                            app:layout_constraintEnd_toStartOf="@+id/tv_voter_no"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lbl_village" />

                        <TextView
                            android:id="@+id/tv_voter_no"
                            style="@style/TextViewStyleMedium"
                            android:text="@string/voter_no"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tv_village"
                            app:layout_constraintTop_toBottomOf="@+id/lbl_village" />

                        <TextView
                            android:id="@+id/lbl_epic_no"
                            style="@style/TextViewStyleRegular"
                            android:layout_width="0dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/epic_no"
                            android:textColor="@color/et_hint_color"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toStartOf="@+id/lbl_age"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_village" />

                        <TextView
                            android:id="@+id/lbl_age"
                            style="@style/TextViewStyleRegular"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/age"
                            android:textColor="@color/et_hint_color"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/lbl_epic_no"
                            app:layout_constraintTop_toBottomOf="@+id/tv_voter_no" />

                        <TextView
                            android:id="@+id/tv_epic_no"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="0dp"
                            android:text="@string/house_number"
                            app:layout_constraintEnd_toStartOf="@+id/tv_age"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lbl_epic_no" />

                        <TextView
                            android:id="@+id/tv_age"
                            style="@style/TextViewStyleMedium"
                            android:text="@string/age"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/tv_epic_no"
                            app:layout_constraintTop_toBottomOf="@+id/lbl_epic_no" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_house_no"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            app:layout_constraintTop_toBottomOf="@+id/tv_age">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_homeno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/house_number"
                                android:text=""
                                android:textSize="@dimen/sp_15" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_address"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            app:layout_constraintTop_toBottomOf="@+id/input_house_no">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_addr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/address"
                                android:text=""
                                android:textSize="@dimen/sp_15" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/lbl_booth"
                            style="@style/TextViewStyleRegular"
                            android:layout_width="0dp"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="@string/booth"
                            android:textColor="@color/et_hint_color"
                            android:textSize="@dimen/sp_14"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/input_address" />

                        <TextView
                            android:id="@+id/tv_booth"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="0dp"
                            android:text="@string/booth"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lbl_booth" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_weight="0.5">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_mobno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/mobile_number"
                                android:inputType="phone"
                                android:text=""
                                android:textSize="@dimen/sp_15" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_weight="0.3"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/add_number"
                            android:textColor="@color/white_in_both_theme" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_outstation_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dp_5"
                                android:hint="@string/outstation_address" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Spinner
                            android:id="@+id/sp_position"
                            style="@style/CustomDropDownTilStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/sp_15"
                            android:visibility="gone" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/sp_religion"
                            style="@style/CustomDropDownTilStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/sp_15" />

                        <Spinner
                            android:id="@+id/sp_cast"
                            style="@style/CustomDropDownTilStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/sp_15" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/sp_designation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/sp_15" />


                        <Spinner
                            android:id="@+id/spprofession"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="0.5"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/sp_15" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dp_5"
                            android:hint="@string/remark" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/lbl_is_head"
                            style="@style/TextViewStyleRegular"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/is_dead"
                            android:textColor="@color/secondary_text_color"
                            android:textSize="@dimen/sp_14" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/dead_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:minHeight="@dimen/dp_20" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="start"
                        android:padding="2dp"
                        android:text="@string/booth_committee"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="@dimen/sp_15" />

                    <RadioGroup
                        android:id="@+id/rg_committee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_admin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/admin"
                            android:textSize="@dimen/sp_15" />

                        <RadioButton
                            android:id="@+id/rb_member"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/member"
                            android:textSize="@dimen/sp_15" />

                        <RadioButton
                            android:id="@+id/rb_none"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/none"
                            android:textSize="@dimen/sp_15" />

                    </RadioGroup>


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.3"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/save"
                            android:textColor="@color/white_in_both_theme" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_family"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.45"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/family"
                            android:textColor="@color/white_in_both_theme" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_call"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.25"
                            android:background="@drawable/theme_border"
                            android:onClick="@{onClickListener}"
                            android:text="@string/call"
                            android:textColor="@color/white_in_both_theme" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
