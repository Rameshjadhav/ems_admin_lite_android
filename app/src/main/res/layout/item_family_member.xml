<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="voter"
            type="com.ems.lite.admin.model.table.Voter" />

        <variable
            name="voterClickListener"
            type="com.ems.lite.admin.ui.adapters.FamilyMemberListAdapter.VoterClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{()->voterClickListener.onItemClick(voter)}"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_10"
            android:weightSum="1">


            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewStyleMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{voter.getFullName()??""}'
                android:textColor="@color/theme_color"
                app:layout_constraintEnd_toStartOf="@+id/tv_mobile_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_mobile_number"
                style="@style/TextViewStyleMedium"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:onClick="@{()->voterClickListener.onCallClick(voter.mobileNo)}"
                android:text='@{voter.mobileNo??""}'
                android:textColor="@color/theme_color"
                android:visibility="@{voter.mobileNo}"
                app:drawableStartCompat="@drawable/call_theme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_voter_no"
                style="@style/TextViewStyleRegular"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/voter_no"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/tv_voter_no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />


            <TextView
                android:id="@+id/tv_voter_no"
                style="@style/TextViewStyleRegular"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text='@{""+voter.voterNo}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/lbl_epic_no"
                app:layout_constraintStart_toEndOf="@+id/lbl_voter_no"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/lbl_epic_no"
                style="@style/TextViewStyleRegular"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/epic_no"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/tv_epic_no"
                app:layout_constraintStart_toEndOf="@+id/tv_voter_no"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_epic_no"
                style="@style/TextViewStyleRegular"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text='@{voter.cardNo??""}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_epic_no"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/lbl_ward_no"
                style="@style/TextViewStyleRegular"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/booth_no"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/tv_ward_no"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_epic_no" />

            <TextView
                android:id="@+id/tv_ward_no"
                style="@style/TextViewStyleRegular"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text='@{""+voter.boothNo}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/lbl_age"
                app:layout_constraintStart_toEndOf="@+id/lbl_ward_no"
                app:layout_constraintTop_toBottomOf="@+id/tv_epic_no" />

            <TextView
                android:id="@+id/lbl_age"
                style="@style/TextViewStyleRegular"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/age"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/tv_age"
                app:layout_constraintStart_toEndOf="@+id/tv_ward_no"
                app:layout_constraintTop_toBottomOf="@+id/tv_epic_no" />

            <TextView
                android:id="@+id/tv_age"
                style="@style/TextViewStyleRegular"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text='@{""+voter.age}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_age"
                app:layout_constraintTop_toBottomOf="@+id/tv_epic_no" />

            <TextView
                android:id="@+id/lbl_is_head"
                style="@style/TextViewStyleRegular"
                android:layout_width="0dp"
                android:text="@string/is_family_head"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/head_switch"
                app:layout_constraintEnd_toStartOf="@+id/head_switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/head_switch" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/head_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:minHeight="@dimen/dp_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_is_head"
                app:layout_constraintTop_toBottomOf="@+id/tv_age" />

            <TextView
                android:id="@+id/tv_remove"
                style="@style/TextViewStyleBold"
                android:onClick="@{()->voterClickListener.removeFamilyMembe(voter)}"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/remove"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/head_switch" />

            <TextView
                android:id="@+id/tv_relative"
                style="@style/TextViewStyleBold"
                android:onClick="@{()->voterClickListener.onRelativeClick(voter)}"
                android:paddingVertical="@dimen/dp_5"
                android:text="@string/relative"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_15"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/head_switch" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>