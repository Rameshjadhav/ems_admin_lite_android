<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="influencer"
            type="com.ems.lite.admin.model.Influencer" />

        <variable
            name="voterClickListener"
            type="com.ems.lite.admin.ui.adapters.InfluencerListAdapter.VoterClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{()->voterClickListener.onItemClick(influencer)}"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_10"
            android:weightSum="1">


            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewStyleMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text='@{influencer.getFullName()??""}'
                android:textColor="@color/theme_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lbl_booth_name"
                style="@style/TextViewStyleRegular"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/booth_name"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/tv_booth_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_booth_name"
                style="@style/TextViewStyleRegular"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/dp_5"
                android:text='@{influencer.getFullBoothName()??""}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/lbl_count"
                app:layout_constraintStart_toEndOf="@+id/lbl_booth_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/lbl_count"
                style="@style/TextViewStyleRegular"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/count"
                android:textColor="@color/et_hint_color"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/tv_count"
                app:layout_constraintStart_toEndOf="@+id/tv_booth_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_count"
                style="@style/TextViewStyleRegular"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text='@{""+influencer.totalCount}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_count"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_mobile_number"
                style="@style/TextViewStyleMedium"
                android:text='@{influencer.mobileNo??""}'
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/iv_call"
                app:layout_constraintEnd_toStartOf="@+id/tv_space"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_call" />

            <TextView
                android:id="@+id/tv_space"
                style="@style/TextViewStyleRegular"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="@+id/iv_call"
                app:layout_constraintEnd_toStartOf="@+id/iv_call"
                app:layout_constraintStart_toEndOf="@+id/tv_mobile_number"
                app:layout_constraintTop_toTopOf="@+id/iv_call" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:visibility='@{influencer.mobileNo}'
                android:onClick="@{()->voterClickListener.onCallClick(influencer)}"
                android:src="@android:drawable/sym_call_outgoing"
                app:layout_constraintEnd_toStartOf="@+id/iv_whatsapp"
                app:layout_constraintStart_toEndOf="@+id/tv_space"
                app:layout_constraintTop_toBottomOf="@+id/tv_count" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:src="@drawable/whatsapp"
                android:visibility='@{influencer.mobileNo}'
                android:onClick="@{()->voterClickListener.onWhatsAppClick(influencer)}"
                app:layout_constraintBottom_toBottomOf="@+id/iv_call"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_call"
                app:layout_constraintTop_toTopOf="@+id/iv_call" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>