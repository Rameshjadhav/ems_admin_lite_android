<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="reportOption"
            type="com.ems.lite.admin.report.model.ReportOption" />

        <variable
            name="reportOptionClickListener"
            type="com.ems.lite.admin.report.ui.adapters.ReportOptionAdapter.ReportOptionClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->reportOptionClickListener.onItemClick(reportOption)}"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_home_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_home_option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_option"
            style="@style/TextViewStyleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:text='@{reportOption.title}'
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_home_option"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_2"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_home_option"
            app:layout_constraintStart_toStartOf="@+id/tv_home_option" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>